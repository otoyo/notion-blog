{
  "name": "notion-blog",
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "start:docker": "docker run --rm -e NOTION_API_SECRET=${NOTION_API_SECRET} -e DATABASE_ID=${DATABASE_ID} -e INDEX_PAGE_ID=${INDEX_PAGE_ID} -e SUBSCRIPTION_PAGE_ID=${SUBSCRIPTION_PAGE_ID} -p 127.0.0.1:3000:3000 notion-blog",
    "build:docker": "docker build --platform linux/amd64 --build-arg NEXT_PUBLIC_URL=${NEXT_PUBLIC_URL} --build-arg NEXT_PUBLIC_GA_TRACKING_ID=${NEXT_PUBLIC_GA_TRACKING_ID} -t notion-blog .",
    "format": "prettier --write \"**/*.{js,jsx,json,ts,tsx,md,mdx,css,html,yml,yaml,scss,sass}\" --ignore-path .gitignore",
    "lint": "next lint",
    "test": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@notionhq/client": "^1.0.4",
    "axios": "^0.27.2",
    "got": "^12.3.1",
    "mermaid": "^9.1.2",
    "metascraper": "^5.30.2",
    "metascraper-description": "^5.30.2",
    "metascraper-image": "^5.30.2",
    "metascraper-title": "^5.30.2",
    "next": "^13.0.7",
    "nextjs-progressbar": "^0.0.14",
    "prismjs": "^1.28.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-katex": "^2.0.2",
    "react-share": "^4.4.0",
    "react-twitter-embed": "^4.0.4",
    "shell-quote": "^1.7.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^17.0.35",
    "@types/prismjs": "^1.26.0",
    "@types/react": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "eslint": "8.16.0",
    "eslint-config-next": "^13.0.7",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.2",
    "prettier": "^2.6.2",
    "typescript": "^4.7.2"
  }
}
