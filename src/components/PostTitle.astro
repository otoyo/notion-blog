---
import { Post } from '../lib/interfaces.ts'
import { getPostLink } from '../lib/blog-helpers.ts'

export interface Props {
  post: Post
  enableLink: boolean
}

const { post, enableLink = true } = Astro.props

let title = post.Title
if (post.Icon?.Emoji) {
  title = `${post.Icon.Emoji} ${title}`
}
---

<h3 class="post-title">
  {enableLink ? <a href={getPostLink(post.Slug)}>{title}</a> : title}
</h3>

<style>
  .post-title {
    font-size: 1.6rem;
    color: var(--fg);
  }
  .post-title a {
    font-size: 1.2rem;
    color: inherit;
  }
  @media (max-width: 640px) {
    .post-title {
      font-size: 1.2rem;
    }
    .post-title a {
      font-size: 1.15rem;
    }
  }
</style>
